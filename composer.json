{
    "name": "sam-it/docker-php",
    "description": "Docker context helpers",
    "type": "library",
    "require": {
        "ext-json": "*",
        "php": ">= 8.1",
        "symfony/filesystem": "^6"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^12.0",
        "phpunit/phpunit": "^10",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "SamIT\\Docker\\": ["src/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": ["tests/"]
        }
    },
    "license": "MIT",
    "scripts": {
        "test": "vendor/bin/phpunit --coverage-text --coverage-clover coverage.xml"
    },
    "authors": [
        {
            "name": "Sam Mousa",
            "email": "sam@mousa.nl"
        }
    ]
}
